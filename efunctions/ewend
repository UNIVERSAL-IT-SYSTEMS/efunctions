P=$1
MSG="$2"

if [ "$P" -ne 0 ]
then
  if [ "$MSG" != "" ]
  then
    ewarn "$MSG"
  fi
fi

tput ll
tput cuu1
COLS=$(tput cols)
COLS=$(($COLS-6))
tput cuf $COLS

tput sgr0
tput bold
tput setf 1
echo -n "[ "

if [ "$P" -eq 0 ]
then
  tput setf 2
  echo -n "ok"
else
  tput setf 4
  echo -n "!!"
fi
tput setf 1
echo " ]"

tput sgr0
tput ll

return $P
